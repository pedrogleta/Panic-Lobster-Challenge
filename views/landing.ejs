<%- include ('partials/header') %>

<h1>Landing Page!</h1>

<form action="/list/new" method="POST">
    <label>
        Name
        <input type="text" name="name" placeholder="Ex: John Smith">
    </label>
    
    <label>
        Email
        <input type="email" name="email" placeholder="Ex: john.smith@paniclobster.com">
    </label>
    
    <label>
        Birthdate
        <input type="date" name="birthdate">
    </label>

    <label>
        CPF
        <input type="number" name="CPF">
    </label>
    
    <select name="state" id="state" onchange="changeCities()">
        <% states.forEach(function(state) {%>
        <option> <%= state.Estado %> </option>
        <% }); %>  >
    </select>
    
    <select name="city">
        <option>Curitiba</option>
        <option>Rio de Janeiro</option>
        <option>Fortaleza</option>
        <option>Campo Largo</option>
    </select>
    
    <label>
        Github
        <input type="url" name="github">
    </label>
    
    <button>Save</button>
</form>

<%- include('partials/footer') %>